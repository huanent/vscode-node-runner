{
  "name": "node-runner",
  "displayName": "Node.js Script Runner",
  "description": "One click run javascript or typescript script with Node.js",
  "version": "0.0.2",
  "publisher": "huanent",
  "icon": "logo.png",
  "repository": {
    "url": "https://github.com/huanent/vscode-node-runner.git",
    "type": "github"
  },
  "homepage": "https://github.com/huanent/vscode-node-runner",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Testing",
    "Debuggers",
    "Programming Languages",
    "Keymaps"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "node-runner.run-script",
        "title": "Run Node.js Script",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "node-runner.run-script",
          "when": "resourceLangId == javascript || resourceLangId == typescript",
          "group": "node-runner"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == javascript || resourceLangId == typescript",
          "command": "node-runner.run-script",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "node-runner.run-script",
        "key": "alt+f5",
        "when": "resourceLangId == javascript || resourceLangId == typescript"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.4.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}